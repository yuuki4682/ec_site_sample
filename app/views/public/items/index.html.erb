<div class="container">
  <div class="row">
    <div class="col-12">
      <h3>Line Up</h3>
      <div class="d-flex flex-wrap">
        <% @items.each do |item| %>
          <%= link_to item_path(item) do %>
            <div class="card m-2", style="height: 300px; width: 230px;">
              <%= image_tag item.image, class:"card-img-top", width:"100%", height:"200px", style:"object-fit: cover;" %>
              <div class="card-body">
                <h5 class="card-title"><%= item.name %></h5>
                <p class="card-text"><%= item.price %></p>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>