<div class="container">
  <div class="row">
    <div class="col-7 mx-auto">
      <h3>Item Detail</h3>
      <table class="table">
        <tr>
          <th></th>
          <td><%= image_tag @item.image, style:"height: 300px;" %></td>
        </tr>
        <tr>
          <th>Name</th>
          <td><%= @item.name %></td>
        </tr>
        <tr>
          <th>description</th>
          <td><%= @item.description %></td>
        </tr>
        <tr>
          <th>price</th>
          <td><%= @item.price %></td>
        </tr>
      </table>
      <div class="my-3">
        <%= link_to '<Back', admin_items_path %> | <%= link_to 'Edit', edit_admin_item_path(@item) %>
      </div>
    </div>
  </div>
</div>