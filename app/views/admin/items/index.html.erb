<div class="container">
  <div class="row">
    <div class="col-7 mx-auto">
      <div class="pb-3">
        <%= link_to 'Add New Item', new_admin_item_path, class:"btn btn-success" %>
      </div>
      <table class="table">
        <tr>
          <th>Name</th>
          <th>Price</th>
          <th></th>
          <th></th>
          <th></th>
        </tr>
        <% @items.each do |item| %>
          <tr>
            <td><%= item.name %></td>
            <td><%= item.price %></td>
            <td><%= link_to 'Show', admin_item_path(item) %></td>
            <td><%= link_to 'Edit', edit_admin_item_path(item) %></td>
            <td><%= link_to 'Delete', admin_item_path(item), method: :delete %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>